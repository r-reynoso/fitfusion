rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Users can read and write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Trainers can read their clients' user data
      allow read: if request.auth != null && 
                     resource.data.role == 'client' && 
                     resource.data.trainerId == request.auth.uid;
    }
    
    // Clients collection - stores additional client information
    match /clients/{clientId} {
      // Trainers can read and write their own clients
      allow read, write: if request.auth != null && resource.data.trainerId == request.auth.uid;
      // Clients can read their own data
      allow read: if request.auth != null && request.auth.uid == clientId;
    }
    
    // Routines collection
    match /routines/{routineId} {
      // Trainers can read and write their own routines
      allow read, write: if request.auth != null && resource.data.trainerId == request.auth.uid;
      // Clients can read routines assigned to them
      allow read: if request.auth != null && resource.data.clientId == request.auth.uid;
      // Public routines can be read by anyone (for sharing)
      allow read: if resource.data.isPublic == true;
    }
    
    // Public routine shares - for public links
    match /publicShares/{shareId} {
      allow read: if true; // Anyone can read public shares
      allow write: if request.auth != null; // Only authenticated users can create shares
    }
    
    // Analytics collection - only for trainers to read their own analytics
    match /analytics/{analyticsId} {
      allow read, write: if request.auth != null && resource.data.trainerId == request.auth.uid;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
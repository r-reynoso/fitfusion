rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Trainers collection - trainers can read/write their own document
    match /trainers/{trainerId} {
      allow read, write: if request.auth != null && request.auth.uid == trainerId;
    }
    
    // Clients collection - clients can read their own document, trainers can read/write their clients
    match /clients/{clientId} {
      allow read: if request.auth != null && 
        (request.auth.uid == clientId || 
         request.auth.uid == resource.data.trainerId);
      allow write: if request.auth != null && request.auth.uid == resource.data.trainerId;
    }
    
    // Routines collection
    match /routines/{routineId} {
      // Public routines can be read by anyone
      allow read: if resource.data.isPublic == true;
      
      // Private routines can be read by client or trainer
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.clientId || 
         request.auth.uid == resource.data.trainerId);
         
      // Only trainers can create/update/delete routines
      allow write: if request.auth != null && request.auth.uid == resource.data.trainerId;
    }
    
    // Analytics collection - only trainers can access their own analytics
    match /analytics/{trainerId} {
      allow read, write: if request.auth != null && request.auth.uid == trainerId;
    }
  }
}
